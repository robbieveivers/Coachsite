---
interface Props {
  title: string;
}

const { title } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Professional Ironman and triathlon coaching with Chelsea Seymour" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <nav>
        <a href={`${base}/`}>Home</a>
        <a href={`${base}/about`}>About</a>
        <a href={`${base}/contact`}>Contact</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <p>&copy; 2025 Chelsea Seymour Coaching. All rights reserved.</p>
      <p>
        <a href="https://youtube.com/@chels.seymour" target="_blank" rel="noopener noreferrer">
          ðŸŽ¥ YouTube Channel
        </a>
      </p>
    </footer>
  </body>
</html>

<style>
  :root {
    --accent: #ec4899;
    --accent-dark: #be185d;
    --black: #13151a;
    --gray: #3f3f46;
    --gray-light: #fdf2f8;
    --white: #ffffff;
  }
  
  * {
    box-sizing: border-box;
  }
  
  html {
    font-family: system-ui, sans-serif;
    background: var(--white);
    color: var(--black);
  }
  
  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
  
  header {
    background: var(--accent);
    color: var(--white);
    padding: 1rem;
  }
  
  nav {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    gap: 2rem;
  }
  
  nav a {
    color: var(--white);
    text-decoration: none;
    font-weight: 500;
    transition: opacity 0.2s;
  }
  
  nav a:hover {
    opacity: 0.8;
  }
  
  main {
    flex: 1;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    width: 100%;
  }
  
  footer {
    background: var(--gray-light);
    padding: 2rem;
    text-align: center;
    color: var(--gray);
  }
  
  footer a {
    color: var(--accent);
    text-decoration: none;
    font-weight: 500;
    transition: opacity 0.2s;
  }
  
  footer a:hover {
    opacity: 0.8;
  }
</style>
