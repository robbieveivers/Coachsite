<style>
  .contact-header {
    text-align: center;
    background: linear-gradient(135deg, var(--accent-light) 0%, var(--accent) 100%);
    padding: 3rem 2rem;
    margin: -2rem -2rem 3rem -2rem;
    border-radius: 0 0 20px 20px;
    box-shadow: var(--shadow-lg);
  }
  
  .contact-header h1 {
    color: var(--white);
    font-size: 3rem;
    margin: 0 0 1rem 0;
    font-weight: 800;
  }
  
  .subtitle {
    color: var(--white);
    font-size: 1.5rem;
    margin: 0;
    font-weight: 500;
  }
  
  .intro-section {
    background: linear-gradient(135deg, var(--gray-light) 0%, var(--gray-lighter) 100%);
    padding: 2.5rem;
    border-radius: 12px;
    box-shadow: var(--shadow-md);
    margin-bottom: 3rem;
    text-align: center;
  }
  
  .intro-section p {
    font-size: 1.2rem;
    line-height: 1.8;
    margin: 0;
    color: var(--gray);
  }

  section {
    margin: 3rem 0;
  }
  
  section h2 {
    text-align: center;
    color: var(--accent);
    font-size: 2.5rem;
    margin-bottom: 2.5rem;
    font-weight: 700;
  }

  .contact-info {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2.5rem;
    margin-top: 2rem;
  }

  .info-card {
    background: var(--white);
    padding: 2.5rem;
    border-radius: 12px;
    box-shadow: var(--shadow-md);
    text-align: center;
    transition: all 0.3s ease;
    border: 2px solid var(--gray-light);
  }
  
  .info-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
    border-color: var(--accent-light);
  }
  
  .icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .info-card h3 {
    color: var(--accent);
    margin: 0 0 1rem 0;
    font-size: 1.5rem;
  }
  
  .info-card p {
    margin: 0.5rem 0;
    line-height: 1.6;
  }

  .info-card a {
    color: var(--accent);
    text-decoration: none;
    font-weight: 700;
    font-size: 1.1rem;
    transition: color 0.3s ease;
  }

  .info-card a:hover {
    color: var(--accent-dark);
  }
  
  .social-section {
    margin-top: 4rem;
  }
  
  .social-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2.5rem;
    margin-top: 2rem;
  }
  
  .social-card {
    background: linear-gradient(135deg, var(--gray-light) 0%, var(--gray-lighter) 100%);
    padding: 2rem;
    border-radius: 12px;
    box-shadow: var(--shadow-md);
    transition: all 0.3s ease;
  }
  
  .social-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
  }
  
  .social-card h3 {
    color: var(--accent);
    margin: 0 0 1rem 0;
    font-size: 1.5rem;
  }
  
  .social-card a {
    color: var(--accent);
    text-decoration: none;
    font-weight: 700;
    font-size: 1.1rem;
  }
  
  .social-card a:hover {
    text-decoration: underline;
  }
  
  .instagram-embed {
    margin-top: 1.5rem;
    display: flex;
    justify-content: center;
  }

  ol {
    line-height: 2;
    padding-left: 1.5rem;
  }

  ol li {
    margin: 1rem 0;
    font-size: 1.1rem;
    color: var(--gray);
  }
  
  .small {
    font-size: 0.95rem;
    color: var(--gray);
    margin-top: 0.5rem;
  }
  
  @media (max-width: 768px) {
    .contact-header h1 {
      font-size: 2rem;
    }
    
    .subtitle {
      font-size: 1.2rem;
    }
    
    .contact-info, .social-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
