  }

  .info-card h3 {
    color: var(--accent);
    margin-top: 0;
  }

  .info-card a {
    color: var(--accent);
    text-decoration: none;
    font-weight: 600;
  }

  .info-card a:hover {
    text-decoration: underline;
  }

  ol {
    line-height: 2;
  }

  ol li {
    margin: 1rem 0;
  }
  
  .small {
    font-size: 0.9rem;
    color: var(--gray);
  }
</style>
